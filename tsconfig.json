{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true, // Enforce explicit override in class methods, enhancing code readability and maintainability

    /* Module Resolution */
    "module": "CommonJS", // or "es6"
    "isolatedModules": true, // Ensures all files can be safely transpiled independently
    "resolveJsonModule": true, // Enable importing of JSON modules

    /* Misc */
    "forceConsistentCasingInFileNames": true
  }
}